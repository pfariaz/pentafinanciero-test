{
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node --files"
    },
    "quiet": true,
    "ignore": [
      "build",
      ".git"
    ],
    "ext": "js,json,ts"
  },
  "keywords": [
    "microservice"
  ],
  "name": "api",
  "version": "1.0.0",
  "description": "api for pentafinanciero test",
  "main": "index.js",
  "private": false,
  "scripts": {
    "watch": "nodemon -x yarn",
    "watch:cmd": "nodemon -x",
    "compile": "tsc",
    "clean": "rm -rf build/*",
    "start": "node build",
    "start:dev": "TS_NODE_FILES=true node --inspect=9000 -r ts-node/register src/index.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "NODE_CONFIG_ENV=test jest",
    "test:fast": "NODE_CONFIG_ENV=test jest",
    "pretest": "yarn tslint && NODE_CONFIG_ENV=test yarn migrate",
    "migrate": "typeorm migration:run",
    "premigrate": "stat bin/createdb >/dev/null 2>&1 && bin/createdb || echo 'skip createdb'",
    "typeorm": "node -r ts-node/register ./node_modules/.bin/typeorm",
    "prestart": "yarn migrate",
    "prestart:dev": "yarn migrate"
  },
  "author": {
    "name": "pfarias",
    "email": "pfariaz011@gmail.com"
  },
  "repository": "https://github.com/pfariaz/pentafinanciero-test.git",
  "dependencies": {
    "config": "^3.3.1",
    "dd-trace": "^0.19.0",
    "express": "^4.17.1",
    "express-healthcheck": "^0.1.0",
    "express-winston": "^4.0.3",
    "morgan": "^1.10.0",
    "opentracing": "^0.14.4",
    "pg": "^8.0.2",
    "raven": "^2.6.4",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.24",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/config": "^0.0.36",
    "@types/express": "^4.17.6",
    "@types/express-winston": "^4.0.0",
    "@types/jest": "^25.2.1",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.11.1",
    "@types/raven": "^2.5.3",
    "jest": "^25.3.0",
    "nodemon": "^2.0.3",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.8.3"
  }
}
